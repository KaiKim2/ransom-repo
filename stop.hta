<!DOCTYPE html>
<html>
<head>
    <title>Input Simulation</title>
    <hta:application
        id="simulator"
        border="none"
        maximizeButton="no"
        minimizeButton="no"
        sysmenu="no"
        caption="no"
        scroll="no"
        singleInstance="yes"
        showInTaskbar="no"
    />
    <style>
        html, body {
            width: 100%;
            height: 100%;
            margin: 0;
            background: black;
            color: white;
            font-family: "Segoe UI";
            overflow: hidden;
        }
        #message {
            text-align: center;
            font-size: 32pt;
            margin-top: 50px;
        }
        #countdown {
            text-align: center;
            font-size: 96pt;
            color: red;
            margin-top: 50px;
        }
        #hint {
            text-align: center;
            font-size: 14pt;
            color: lightgray;
            margin-top: 50px;
        }
        #cancelBtn {
            display: block;
            margin: 50px auto;
            font-size: 18pt;
            padding: 10px 20px;
        }
    </style>
    <script type="text/javascript">
        var duration = 60; // seconds
        document.onkeydown = function(e) {
            if (e.key === "Escape") window.close();
            return false;
        }
        document.onmousedown = function() { return false; } // swallow clicks
        document.oncontextmenu = function() { return false; } // disable right-click

        function updateTimer() {
            document.getElementById('countdown').innerText = duration;
            duration--;
            if (duration < 0) {
                window.close();
            } else {
                setTimeout(updateTimer, 1000);
            }
        }

        window.onload = function() {
            updateTimer();
        }

        function cancelSimulation() {
            window.close();
        }
    </script>
</head>
<body>
    <div id="message">INPUT SIMULATION â€” Disabled for:</div>
    <div id="countdown">60</div>
    <div id="hint">Press ESC or click CANCEL to stop immediately. This is a safe simulation.</div>
    <button id="cancelBtn" onclick="cancelSimulation()">CANCEL</button>
</body>
</html>
